@model BVTV.WebGIS.Models.Account

@{
    Layout = "";
}
<html>
<head>
    <title>Đăng nhập</title>
    <link href="~/Content/login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="form-signin">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h2 class="form-signin-heading">Đăng nhập</h2>
                @Html.LabelFor(model => model.username, new { @class = "sr-only" })
                @Html.TextBoxFor(model => model.username, new { @class = "form-control", @placeholder = "Tài khoản", @autocomplete = "off", @autocorrect = "off", @autocapitalize = "off", @spellcheck = "false" })
                @Html.LabelFor(model => model.pass, new { @class = "sr-only" })
                @Html.PasswordFor(model => model.pass, new { @class = "form-control", @placeholder = "Mật khẩu", @autocomplete = "off", @autocorrect = "off", @autocapitalize = "off", @spellcheck = "false" })

                <div class="checkbox">
                    @Html.EditorFor(model => model.isRemember)
                    @Html.LabelFor(model => model.isRemember)
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
            }
        </div>
    </div> <!-- /container -->

</body>
</html>

