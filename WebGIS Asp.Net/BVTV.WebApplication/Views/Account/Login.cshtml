@using BVTV.WebApplication.Models
@model LoginViewModel
@{
    Layout = null;

}
<!doctype html>
<html>
<head>
    <title>Đăng nhập - Cục bảo vệ thực vật tỉnh Bình Dương</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="body"></div>
        <div class="grad"></div>
        <div class="header">
            <div>Chi cục bảo vệ Thực vật<p>Bình Dương</p></div>
        </div>
        <br>
        <div class="row">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tài khoản", @autocomplete = "off", @autocorrect = "off", @autocapitalize = "off", @spellcheck = "false" })<br />
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @autocomplete = "off", @autocorrect = "off", @autocapitalize = "off", @spellcheck = "false" })<br />
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="col-md-10">
                    <button type="submit">Đăng nhập</button>
                </div>
                <div class="col-md-10">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    }
</body>
</html>