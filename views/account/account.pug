
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId

#account-form-container.center-vertical
	form(method="post")#account-form.form-horizontal.well
		h2
		h6#sub1 Nhập thông tin.
		hr
		.form-group
			label.control-label.col-sm-3 Tên
			.col-sm-9
				input.form-control#name-tf(type='text', name='name', value= user.displayName)

		.form-group
			label.control-label.col-sm-3 Thư điện tử
			.col-sm-9
				input.form-control#email-tf(type='text', name='email', value= user.email)

		hr
		h6#sub2
		.form-group
			label.control-label.col-sm-3 Tài khoản
			.col-sm-9
				input.form-control#user-tf(type='text', name='user', value= user.username).disabled

		.form-group
			label.control-label.col-sm-3 Mật khẩu
			.col-sm-9
				input.form-control#pass-tf(type='password', name='pass', value='')

		hr
		.form-buttons
			button(type='button')#account-form-btn1.btn.btn-default Hủy
			button(type='submit')#account-form-btn2.btn.btn-primary Chấp nhận
		.clearfix

// display form errors in a custom modal window //

include ../modals/form-errors
